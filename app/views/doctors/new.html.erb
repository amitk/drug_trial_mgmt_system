<% if @doctor.errors.any? %>
  <%= render partial: 'shared/errors', locals: { subject: @doctor } %>
<%end%>
<div class="card m-4">
  <div class="card-header">
    <p class="fs-2">New Doctor's Form</p>
  </div>
  <%= form_with(model: @doctor, local: true) do |f| %>
    <div class="card-body">
      <div class="mb-3 row">
        <%= f.label "Name:", { class: "form-label" } %>
        <%= f.text_field :name, { class: "form-control" } %>
      </div>
      <div class="mb-3 row">
        <div class="col">
          <%= f.label "Gender:", { class: "form-label" } %>
          <%= f.select :gender, [['Male', 'male'], ['Female', 'female']], {}, {class: "form-select"} %>
        </div>
        <div class="col">
          <%= f.label 'Contact:', { class: "form-label"}%>
          <%= f.number_field :contact_no, { class: "form-control"} %>
        </div>
      </div>
      <div class="mb-3 row">
        <%= f.label "Clinics" %>
        <%= f.collection_select(:clinic_ids, Clinic.all, :id, :name, {}, { multiple: true }) %>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit 'Create', { class: "btn btn-outline-primary"} %>
      <%= link_to 'Cancel', doctors_path, { class: "btn btn-outline-secondary"} %>
    </div>
<% end %>
</div>
