<div class="row border-bottom mb-2">
  <h1> New Clinic Page </h1>
</div>
<div>
<% if @clinic.errors.any? %>
  <div class="card">
    <div class="card-header">
      <h3> Errors occurred during the process </h3>
    </div>
    <div class="card-body">
      <ul>
        <% @clinic.errors.full_messages.each do |message|%>
          <li><%= message %> </li>
        <%end%>
      </ul>
    </div>
  </div>
<%end%>
  
<%= render partial: 'form', locals: { clinic: @clinic, url: '/clinics', method: :post } %>
